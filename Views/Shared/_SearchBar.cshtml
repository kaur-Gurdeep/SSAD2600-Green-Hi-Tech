<div class="search-container" style="margin: 20px 0; display: flex; justify-content: center;">
    <form asp-controller="Product" asp-action="Search" method="get" style="display: flex; width: 100%; max-width: 500px;">
        <input type="text" name="searchTerm" class="search-box" placeholder="What can we help you to find?" style="flex-grow: 1; padding: 10px; border: 1px solid #ddd; border-radius: 4px 0 0 4px;">
        <button type="submit" class="search-button" style="padding: 10px 0; color: border: none; border-radius: 0 4px 4px 0; cursor: pointer;">
            <i class="fa fa-search"></i>
        </button>
    </form>
</div>
