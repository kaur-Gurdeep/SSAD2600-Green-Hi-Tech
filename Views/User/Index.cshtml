@model IEnumerable<GreenHiTech.ViewModels.UserVM>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.PkUserId</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@(user.Phone ?? "N/A")</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@user.PkUserId" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.PkUserId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.PkUserId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
