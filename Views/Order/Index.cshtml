@model IEnumerable<GreenHiTech.ViewModels.OrderVM>

@{
    ViewData["Title"] = "Order";
}

<div class="container mt-5">
    <h2 class="mb-4">Orders</h2>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PkId)</th>
                <th>@Html.DisplayNameFor(model => model.FkUserId)</th>
                <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.PkId</td>
                        <td>@order.FkUserId</td>
                        <td>@order.OrderDate</td>
                        <td>@order.TotalAmount</td>
                        <td>@order.Status</td>
                        <td>
                            <a asp-action="ViewOrderDetails" asp-route-id="@order.PkId">Order Details </a>
                           
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No orderDetails exist.</td>
                </tr>
            }
        </tbody>
    </table>
</div>