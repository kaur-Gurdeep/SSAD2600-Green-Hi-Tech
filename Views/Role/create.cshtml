@model GreenHiTech.ViewModels.RoleVM

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm" style="max-width: 500px; margin: auto;">
        <div class="card-header" style="background-color: gray; color: white;">
            <h4>Create Role</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div><br />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn" style="background-color: #4e9648; color: white; width: 100%;" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn" style="background-color: #494949; color: white; width: 100%;">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
